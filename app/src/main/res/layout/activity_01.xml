<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.hhu.acd.touching.Activity_01">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar01"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/primary"
        android:fitsSystemWindows="true"
        app:contentInsetLeft="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帐号登录"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/touxiang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <EditText
            android:id="@+id/account"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:hint="账号"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:maxLength="11"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:ems="15"
            android:layout_weight="1"
            android:layout_below="@+id/account"
            android:layout_alignStart="@+id/account"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/B_login"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="登录"
            android:background="@color/primary"
            android:textSize="20dp"
            android:layout_below="@+id/password"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

        <CheckBox
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="同意服务条款"
            android:layout_below="@+id/B_login"
            android:layout_alignStart="@id/B_login" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="新用户注册"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/agree"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="忘记密码？"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/agree"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>
