<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    tools:context="com.hhu.acd.touching.Activity_02">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/primary"
        android:fitsSystemWindows="true"
        app:contentInsetLeft="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帐号申请"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            />

    </android.support.v7.widget.Toolbar>




        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">


            <EditText
                    android:id="@+id/phonenumber"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="输入手机号码"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true" />



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp">

                <EditText
                    android:id="@+id/identity_code"
                    android:layout_marginTop="6dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:hint="输入验证码"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="numberPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="6"/>

                <com.hhu.acd.touching.TimeButton
                    android:id="@+id/send_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/timebutton"


                    />

            </LinearLayout>
            <Button
                android:id="@+id/checkcode"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:text="确定"
                android:background="@color/primary"
                android:textColor="@color/primary_text"
                android:textSize="20sp"/>
            <CheckBox
                android:id="@+id/email_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="同意服务条款"
                android:layout_below="@+id/B_login"
                android:layout_alignStart="@id/B_login"
                android:layout_gravity="center"/>



        </LinearLayout>

</LinearLayout>
