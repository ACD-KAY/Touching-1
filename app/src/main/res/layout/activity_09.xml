<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:amdorid="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/primary"
            android:fitsSystemWindows="true"
            app:contentInsetLeft="0dp">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/primary"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/vector_drawable_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="创建会议"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </android.support.v7.widget.Toolbar>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="会议封面:"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/meetingimage"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="会议主题:"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/meetingtheme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="不超过10个字" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="会议简介:"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/meetingbrief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="不超过20字"
            android:scrollbarSize="30dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="注册开始时间:"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/loginstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="2018-1-1 00:00"
                android:textSize="20dp"
                android:onClick="logintime"
                android:layout_gravity="right"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="注册截止时间:"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/loginend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="2018-1-1 00:00"
                android:textSize="20dp"
                android:onClick="logintime"
                android:layout_gravity="right"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="会议开始时间:"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="2018-1-1 00:00"
                android:textSize="20dp"
                android:onClick="logintime"
                android:layout_gravity="right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="会议结束时间:"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="2018-1-1 00:00"
                android:textSize="20dp"
                android:onClick="logintime"
                android:layout_gravity="right"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="活动地点:"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/meetingarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"

            android:text="设置互动项目:"
            android:textSize="20dp"
            android:textColor="@color/black"/>

            <CheckBox
                android:id="@+id/signinfunction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开签到功能"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"/>


            <CheckBox
                android:id="@+id/votefunction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开投票功能"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"/>


            <CheckBox
                android:id="@+id/remarkfunction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开评分功能"
                android:textSize="15dp"
                android:layout_marginLeft="10dp" />


            <CheckBox
                android:id="@+id/notefunction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开笔记功能"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"/>


            <CheckBox
                android:id="@+id/bulletscreenfunction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开弹幕功能"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"/>

            <CheckBox
                android:id="@+id/signoutfunction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开签退功能"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="完成" />
    </LinearLayout>
</ScrollView>