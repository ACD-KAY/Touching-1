<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout
    tools:context="com.hhu.acd.touching.Activity_14"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar03"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/primary"
        android:fitsSystemWindows="true"
        app:contentInsetLeft="0dp"
        >

        <ImageButton
            android:id="@+id/ib1"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/vector_drawable_back"
            android:background="@color/primary"
            android:padding="0dp"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="验证消息"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>


        <Button
            android:id="@+id/ib2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="添加"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="right"/>

    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:layout_constraintVertical_bias="0.227"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="new friend2"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:layout_constraintVertical_bias="0.111"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="new friend1"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:layout_constraintVertical_bias="0.345"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="new friend3"/>
    <Button android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:layout_constraintVertical_bias="0.461"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="new friend4"/>

    <Button
        android:layout_height="46dp"
        android:layout_width="fill_parent"
        app:layout_constraintVertical_bias="0.574"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="new friend5"/>
</android.support.constraint.ConstraintLayout>